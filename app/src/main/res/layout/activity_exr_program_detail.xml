<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ExrProgramDetailActivity">
    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="20dp"
                android:id="@+id/pic"
                android:background="@drawable/img_rounding"
                android:scaleType="fitXY"
                android:src="@drawable/bonobono" />
            <Button
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:id="@+id/apply_btn"
                android:background="#3498DB"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:text="신 청"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="2dp"
                android:id="@+id/name"
                android:layout_toRightOf="@+id/pic"
                android:layout_below="@+id/apply_btn"
                android:text="보노본 - "
                android:textSize="22dp"
                android:textColor="#3498db"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="2dp"
                android:id="@+id/title"
                android:layout_toRightOf="@+id/name"
                android:layout_below="@+id/apply_btn"
                android:text="다이어트 30일"
                android:textSize="22dp"
                android:textColor="#3498db"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/star"
                android:layout_toRightOf="@+id/pic"
                android:layout_below="@+id/name"
                android:text="★★☆☆☆"
                android:textSize="20dp"
                android:textColor="#3498db"
                android:gravity="center"/>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pic"
                android:layout_marginHorizontal="20dp"
                android:columnCount="5"
                android:rowCount="2"
                android:id="@+id/info">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="난이도"
                    android:gravity="center"
                    android:layout_columnWeight="1"
                    android:layout_margin="5dp"
                    android:textSize="15dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:text="추천 성별"
                    android:textSize="15dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_columnWeight="1"
                    android:layout_margin="5dp"
                    android:text="기  간"
                    android:textSize="15dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_columnWeight="1"
                    android:layout_margin="5dp"
                    android:text="현재회원"
                    android:textSize="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_columnWeight="0.6"
                    android:layout_margin="5dp"
                    android:text="정   원"
                    android:textSize="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LV. 3"
                    android:id="@+id/level"
                    android:textColor="#3498DB"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:textSize="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:id="@+id/gender"
                    android:text="  "
                    android:textColor="#3498DB"
                    android:textSize="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:text="30일"
                    android:id="@+id/period"
                    android:textColor="#3498DB"
                    android:textSize="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="31명"
                    android:textColor="#3498DB"
                    android:layout_gravity="center"
                    android:textSize="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:text="50명"
                    android:id="@+id/max"
                    android:textColor="#3498DB"
                    android:textSize="15dp"/>
            </GridLayout>
            <View
                android:layout_width="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:layout_height="1dp"
                android:layout_below="@+id/info"
                android:background="@color/lightGray"
                android:id="@+id/line1"/>

            <ImageButton
                android:id="@+id/exer"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_below="@+id/line1"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/exer" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line1"
                android:layout_toRightOf="@+id/calendar"
                android:id="@+id/use_title"
                android:text="사용 기구"
                android:textSize="25dp"
                android:layout_marginTop="15dp"
                android:textColor="#3498DB"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/use_title"
                android:id="@+id/equip"
                android:layout_marginLeft="40dp"
                android:text="덤벨, 케틀벨, 바벨"
                android:textSize="15dp"
                android:layout_marginRight="40dp"
                android:textColor="#000000"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/equip"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                android:background="@color/lightGray"
                android:id="@+id/line2"/>
            <ImageButton
                android:id="@+id/calendar"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_below="@+id/line2"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/run" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line2"
                android:layout_toRightOf="@+id/calendar"
                android:id="@+id/Prog_title"
                android:text="프로그램 소개"
                android:textSize="25dp"
                android:layout_marginTop="15dp"
                android:textColor="#3498DB"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Prog_title"
                android:id="@+id/intro"
                android:layout_marginLeft="40dp"
                android:text="프로그램소개프로그램소개프로그램소개프로그램소개"
                android:textSize="15dp"
                android:layout_marginRight="40dp"
                android:textColor="#000000"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/intro"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                android:background="@color/lightGray"
                android:id="@+id/line3"/>
            <ImageButton
                android:id="@+id/check"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_below="@+id/line3"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/checkbox" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line3"
                android:layout_toRightOf="@+id/calendar"
                android:id="@+id/daily_list_title"
                android:text="일별 목록"
                android:textSize="25dp"
                android:layout_marginTop="15dp"
                android:textColor="#3498DB"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/daily_list_title"
                android:id="@+id/daily_list"
                android:layout_marginLeft="40dp"
                android:text="1. 1일차 몸풀기\n\t  루틴미리보기\n\t\t\t-푸쉬업 10회\n\t\t\t-스쿼트10회"
                android:textSize="15dp"
                android:layout_marginRight="40dp"
                android:textColor="#000000"/>
        </RelativeLayout>
    </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"/>
</LinearLayout>