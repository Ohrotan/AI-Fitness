<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/menu_background1"
        android:layout_margin="8dp"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/fragment_home_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:text="내가 신청한 운동"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/fragment_home_more1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="25dp"
                android:text="더보기>"
                android:textColor="@color/accent"
                android:textSize="15sp" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/fragment_home_myprogram1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="트레이너명-운동프로그램"
                android:textSize="15sp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/fragment_home_myprogram2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="15sp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/fragment_home_myprogram3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="15sp"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/menu_background1"
        android:layout_margin="8dp"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="트레이너"
                android:textSize="25sp"
                android:layout_margin="20dp"/>

            <TextView
                android:id="@+id/fragment_home_more2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="25dp"
                android:text="더보기>"
                android:textColor="@color/accent"
                android:textSize="15sp" />

        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/fragment_home_imageview_trainer1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/fragment_home_imageview_trainer2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="25dp"
                app:layout_constraintStart_toEndOf="@+id/fragment_home_imageview_trainer1"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/fragment_home_imageview_trainer3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="25dp"
                app:layout_constraintStart_toEndOf="@+id/fragment_home_imageview_trainer2"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/fragment_home_imageview_trainer4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="25dp"
                app:layout_constraintStart_toEndOf="@+id/fragment_home_imageview_trainer3"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/fragment_home_textview_trainer1"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_home_imageview_trainer1" />

            <TextView
                android:id="@+id/fragment_home_textview_trainer2"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@+id/fragment_home_textview_trainer1"
                app:layout_constraintTop_toBottomOf="@+id/fragment_home_imageview_trainer2" />

            <TextView
                android:id="@+id/fragment_home_textview_trainer3"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@+id/fragment_home_textview_trainer2"
                app:layout_constraintTop_toBottomOf="@+id/fragment_home_imageview_trainer3" />

            <TextView
                android:id="@+id/fragment_home_textview_trainer4"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@+id/fragment_home_textview_trainer3"
                app:layout_constraintTop_toBottomOf="@+id/fragment_home_imageview_trainer4" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/menu_background1"
        android:layout_margin="8dp"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="운동 프로그램"
                android:textSize="25sp"
                android:layout_margin="20dp"/>

            <TextView
                android:id="@+id/fragment_home_more3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="25dp"
                android:text="더보기>"
                android:textColor="@color/accent"
                android:textSize="15sp" />


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/fragment_home_textview_program1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="트레이너명-운동프로그램"
                android:textSize="15sp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/fragment_home_textview_program2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="15sp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/fragment_home_textview_program3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="15sp"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>