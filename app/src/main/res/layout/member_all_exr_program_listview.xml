<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_layout"
    android:id="@+id/gotoExrProgramDetail"
    android:layout_margin="10dp">
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="20dp"
        android:id="@+id/pic"
        android:background="@drawable/img_rounding"
        android:scaleType="fitXY"
        android:src="@drawable/bonobono" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/titleOfProg"
        android:layout_toRightOf="@+id/pic"
        android:text="보노본 - 다이어트 30일"
        android:textSize="25dp"
        android:textColor="#3498db"
        android:gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="난이도 : "
        android:layout_below="@+id/titleOfProg"
        android:layout_toRightOf="@+id/pic"
        android:id="@+id/difficulty"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="★★★★★"
        android:layout_below="@+id/titleOfProg"
        android:layout_toRightOf="@+id/difficulty"
        android:id="@+id/diff_star"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="평  점 : "
        android:layout_below="@+id/difficulty"
        android:layout_toRightOf="@+id/pic"
        android:id="@+id/star"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="★★★★★"
        android:layout_below="@+id/difficulty"
        android:id="@+id/rating_star"
        android:layout_toRightOf="@+id/star"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="진행중인 회원수 : "
        android:layout_below="@+id/star"
        android:layout_toRightOf="@+id/pic"
        android:id="@+id/Prog"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20 명"
        android:layout_below="@+id/star"
        android:id="@+id/numOfProg"
        android:layout_toRightOf="@+id/Prog"/>
</RelativeLayout>